package Controller;



import org.springframework.stereotype.Controller;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.config.annotation.EnableWebMvc;

import DTO.FormDto;

@Controller
public class FormController {

	@RequestMapping("/")
	public String form(@ModelAttribute("userDetails") FormDto userDetails) {

		return "form";
	}

	@RequestMapping("/userDetails")
	public String userDetails(@jakarta.validation.Valid @ModelAttribute("userDetails") FormDto userDetails, BindingResult bindresult) {
		if (bindresult.hasErrors()) 
		{
			System.out.println("It has error");
			return "form";
		}
		return "userDetails";
	}
}
